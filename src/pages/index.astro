---
import Layout from '../layouts/Layout.astro';
import SideProjects from '../components/SideProjects.astro';
import Header from '../components/Header.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Clients from '../components/Clients.astro';
---

<Layout title="Bram Bronswijk | Portfolio">
	<Header/>

	<main class="order-3 content grid gap-y-14 py-14">
		<section class="flex justify-around mb-12 flex-col md:flex-row gap-y-6 items-center">
			<Clients/>
		</section>

		<h2 class="text-5xl font-bold text-center">Work experience</h2>
		<section class="grid md:grid-cols-2 mb-12">
			<WorkExperience/>
		</section>

		<h2 class="text-5xl font-bold text-center">Highlighted side projects</h2>

		<section class="w-[300px]">
			<SideProjects client:visible/>
		</section>
	</main>
</Layout>
