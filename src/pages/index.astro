---
import Layout from '../layouts/Layout.astro';
import SideProjects from '../components/SideProjects.tsx';
import Header from '../components/Header.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Clients from '../components/Clients.astro';
---

<Layout title="Bram Bronswijk | Portfolio">
	<Header/>

	<main class="order-3 content grid gap-y-14 py-14">
		<Clients/>

		<h2 class="text-5xl font-bold text-center">Work experience</h2>
		<WorkExperience/>

		<section>
			<h2 class="text-5xl font-bold text-center">Highlighted side projects</h2>
			<p class="text-center  py-8">Always working on many side projects, to try out new
				things and to keep up to date with the latest technologies. </p>
			<SideProjects client:only="react"/>

		</section>

	</main>
</Layout>
