---
import favicon from '@images/favicon.svg';
import colors from 'tailwindcss/colors';
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={favicon.src} />
		<meta name="description" content="Hi, I am, Bram. A full-stack developer with a passion for frontend development and UI design.">
		<title>Bram Bronswijk | Portfolio</title>
	</head>
	<body class="bg-bg text-white grid grid-cols-layout">
		<slot />
	</body>
</html>

<script>
	import 'swiper/css';
	import 'swiper/css/autoplay';
	import 'swiper/css/pagination';
	import { register } from 'swiper/element/bundle';

	register();
</script>

<style is:global define:vars={{ paginationColor: colors['violet']['800'] }}>
	/* https://docs.astro.build/en/reference/directives-reference/#definevars */
	/* noinspection CssUnresolvedCustomProperty */
	:root {
		--padding-inline: 1rem;
		--content-max-width: 1200px;
		--swiper-pagination-color: var(--paginationColor);
	}
</style>
