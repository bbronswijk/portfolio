---
const { id, prev, period, name, position, techStack } = Astro.props;
---

<div class="flex flex-col gap-4">
    <div>
        <small class="text-gray-200 mt-2" data-client={id} data-prev={prev}>{period}</small>
        <h3 class="text-3xl font-bold">{name}</h3>
    </div>
    {position && <small class="px-4 py-1 bg-white/5 border-white/10 border rounded w-fit">{position}</small>}
    <p class="leading-relaxed"><slot /></p>
    <!-- TODO add additional content from resume -->
    <!--<button>Read more ^</button>-->

    <footer class="flex flex-wrap gap-2 mt-2">
        {(techStack || []).map((tech: { src: string; name: string; }) => (
            <div class="bg-white rounded-full p-2 flex item-center justify-center">
                <img class="object-contain" src={tech.src} alt={tech.name} height={20} width={20}/>
            </div>
        ))}
    </footer>
</div>