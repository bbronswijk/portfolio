---
const { class: className } = Astro.props;
---

<div class={(className || '') + " bg-bg border-white/10 border w-full rounded-xl p-8 flex gap-4 flex-wrap shadow-2xl"}>
    <div class="flex-1 flex flex-col gap-4 basis-40">
        <div class="h-3 w-40 bg-white/50 rounded"/>

        <div class="flex items-center gap-2">
            <div class="h-2 w-2 bg-purple-600 rounded-xl"/>
            <div class="h-2 w-16 bg-white/50 rounded"/>
            <div class="h-2 w-2 bg-purple-600 rounded-xl"/>
            <div class="h-2 w-16 bg-white/50 rounded"/>
        </div>

        <div class="flex items-center gap-2">
            <div class="h-2 w-2 bg-purple-600 rounded-xl"/>
            <div class="h-2 w-32 bg-white/50 rounded"/>
        </div>
    </div>

    <div class="flex flex-col justify-center gap-3">
        <div class="flex items-center gap-2">
            <div class="h-2 w-2 bg-purple-600 rounded-xl"/>
            <div class="h-1 w-24 bg-white/50 rounded"/>
        </div>
        <div class="h-1 w-32 bg-purple-600 p-4 rounded-2xl"/>
    </div>
</div>