---
const { class: className } = Astro.props;
---

<div class={(className || '') + " bg-bg border-white/10 border rounded overflow-hidden shadow-2xl"}>
    <div class="flex">
        <div class="min-w-12 bg-purple-600"/>
        <div class="flex-1 bg-white/10 flex p-3 gap-2">
            <div class="h-2 w-14 bg-white/60 rounded"/>
            <div class="h-2 w-12 bg-white/60 rounded"/>
        </div>
    </div>
    <div class="flex gap-4 p-4">
        <div class="h-6 min-w-6 bg-white/60 rounded"/>
        <div class="flex flex-col gap-3 flex-1">
            <div class="h-2 w-24 bg-white/60 rounded mr-auto"/>
            <div class="h-2 w-40 bg-white/60 rounded mr-auto"/>
            <div class="h-2 w-32 bg-white/60 rounded mr-auto"/>
        </div>
    </div>

</div>