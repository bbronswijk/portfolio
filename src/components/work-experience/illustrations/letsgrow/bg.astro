---
const { class: className } = Astro.props;
---

<div class={(className || '') + " bg-white/5 border-white/10 border rounded-xl grid grid-cols-12 grid-rows-12 overflow-hidden"}>
    <aside class="bg-black/10 row-span-12 row-start-1 col-start-1 col-span-1 flex flex-col justify-items gap-1 items-center py-2">
        <div class="h-2 w-2 bg-white/60 m-2 rounded"/>
        <div class="h-2 w-2 bg-white/60 m-2 rounded"/>
        <div class="h-2 w-2 bg-white/60 m-2 rounded"/>
        <div class="h-2 w-2 bg-white/60 m-2 rounded"/>
    </aside>
    <header class="bg-white/5 row-start-1 row-span-1 col-start-2 col-end-13 flex items-center">
        <div class="h-2 w-2 bg-white/60 ml-4 mr-auto rounded"/>
        <div class="h-2 w-24 bg-white/60 rounded-xl mx-4 rounded"/>
        <div class="h-2 w-4 bg-white/60 mx-2 rounded"/>
        <div class="h-2 w-6 bg-white/60 mx-2 rounded"/>
        <div class="h-2 w-4 bg-white/60 mx-2 rounded"/>
    </header>

    <div class="bg-black/5 row-start-2 row-end-13 col-start-2 col-end-7 "/>
</div>