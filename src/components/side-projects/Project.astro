---
import Card from '@components/card/Card.astro';
import FrameworkLogo from '@components/framework-logo/FrameworkLogo.astro';

interface Stack {
    src: string;
    name: string;
}

interface Props {
    name: string;
    techStack: Stack[];
}

const { name, techStack } = Astro.props;
---

<Card class="p-10 flex flex-col gap-6">
    <h3 class="text-4xl font-bold">{name}</h3>
    <slot />
    <footer class="flex gap-2">
        {(techStack || []).map((tech: Stack) => (<FrameworkLogo src={tech.src} name={tech.name} />))}
    </footer>
</Card>
