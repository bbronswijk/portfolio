---
import ANWBImage from '@images/clients/anwb.png';
import VanderlandeImage from '@images/clients/vanderlande.svg';
import HoogendoornImage from '@images/clients/hoogendoorn.svg';
import LyceoImage from '@images/clients/lyceo.svg';
import RTLXLImage from '@images/clients/rtlxl.svg';
import LagaImage from '@images/clients/laga.svg';
import LetsGrow from '@images/clients/letsgrow.svg';
import AuthoriteitIncasso from '@images/clients/authoriteit-incasso.svg';
import FourteenDayzImage from '@images/clients/14dayz.svg';
import OrasImage from '@images/clients/oras.svg';
import enVinkeImage from '@images/clients/enVINKE.svg';
import inspiringInsightsImage from '@images/clients/inspiring-insights.svg';
import rowCoachingImage from '@images/clients/rowcoaching.svg';
import vrpImage from '@images/clients/vrp.svg';
import proteusImage from '@images/clients/proteus.svg';
import ashtoniaImage from '@images/clients/ashtonia.svg';
import prezzenceImage from '@images/clients/prezzence.svg';
import orangeClogImage from '@images/clients/orange-clog.svg';
import juristenCollectiefImage from '@images/clients/juristencollectief.svg';
import otisInsights from '@images/clients/otis.svg';
import hollandsVenetieInsights from '@images/clients/hollands-venetie.svg';
import vrouwInFamilieBedrijf from '@images/clients/vrouw-in-familiebedrijf.svg';
import irisImage from '@images/clients/iris.svg';
import { Image } from 'astro:assets';

const breakpoints = JSON.stringify({
  640: {
    slidesPerView: 3,
  },
  1024: {
    slidesPerView: 4,
  },
});
---

<swiper-container
        class="grid h-16 overflow-hidden"
        slides-per-view="1"
        slides-per-view="auto"
        space-between="0"
        autoplay-delay="2500"
        autoplay-disable-on-interaction
        breakpoints={breakpoints}
        loop>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={ANWBImage} class="object-contain opacity-80" height="40" alt="Logo ANWB"/>
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={VanderlandeImage} class="object-contain opacity-80" height="30" alt="Logo vanderlande"/>
    </swiper-slide>
    <swiper-slide class="grayscale flex items-center justify-center p-4">
        <Image src={LyceoImage} class="object-contain opacity-80" height="30" alt="Logo Lyceo" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={HoogendoornImage} class="object-contain opacity-80" height="30" alt="Logo Hoogendoorn" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={RTLXLImage} class="object-contain opacity-80" height="30" alt="Logo RTLXL" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={LetsGrow} class="object-contain opacity-80" height="55" alt="Logo LetsGrow.com" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={otisInsights} class="object-contain opacity-80" height="40" alt="Logo OtisInsights" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={LagaImage} class="object-contain opacity-80" height="30" alt="Logo Laga" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={OrasImage} class="object-contain opacity-80" height="25" alt="Logo ORAS" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={inspiringInsightsImage} class="object-contain opacity-80" height="50" alt="Logo Inspiring Insights" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={rowCoachingImage} class="object-contain opacity-80" height="40" alt="Logo RowCoaching" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={vrpImage} class="object-contain opacity-80" height="60" alt="Logo vrp architecten" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={AuthoriteitIncasso} class="object-contain opacity-80" height="50" alt="Logo Authoriteit Incasso" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={proteusImage} class="opacity-80" height="30" alt="Logo proteus eretes" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={ashtoniaImage} class="object-contain opacity-80" height="25" alt="Logo ashtonia" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={prezzenceImage} class="object-contain opacity-80" height="40" alt="Logo prezzence" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={orangeClogImage} class="object-contain opacity-80" height="40" alt="Logo OrangeClog" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={FourteenDayzImage} class="object-contain opacity-80" height="40" alt="Logo 14dayz" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={juristenCollectiefImage} class="object-contain opacity-80" height="60" alt="Logo Juristen collectief" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={enVinkeImage} class="object-contain opacity-80" height="30" alt="Logo enVinke" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={irisImage} class="object-contain opacity-80" height="40" alt="Logo powered by Iris" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={hollandsVenetieInsights} class="object-contain" height="50" alt="Logo Hollands Venentie" />
    </swiper-slide>
    <swiper-slide class="flex items-center justify-center p-4">
        <Image src={vrouwInFamilieBedrijf} class="object-contain" height="50" alt="Logo vrouw in familiebedrijf" />
    </swiper-slide>
</swiper-container>